<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ua.lviv.entities.Car" table="cars">
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
        <property name="model" column="model" type="string"/>
        <property name="maxSpeed" column="max_speed" type="int"/>
        <property name="isNew" column="is_new" type="boolean"/>
        <many-to-one name="owner" class="ua.lviv.entities.Owner" column="owner_id"/>
    </class>
</hibernate-mapping>